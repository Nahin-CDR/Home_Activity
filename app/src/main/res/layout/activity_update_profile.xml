<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateProfile">

    <EditText
        android:id="@+id/full_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="My Topic"/>

    <EditText
        android:id="@+id/nid_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="15"
        android:hint="Date"/>
    <EditText
        android:id="@+id/address_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"/>


    <EditText
        android:id="@+id/father_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Line"/>


    <EditText
        android:id="@+id/mother_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Second Line"/>




    <Button
        android:id="@+id/submit_button_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Add"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/display_id"
            android:textSize="20sp"/>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>